<div style="margin-top: 144px;" class="bg-gradient-dark" data-section-id="{{ section.id }}" data-section-type="product" data-enable-history-state="true">
  {% assign product_bought = false %}
  {% for order in customer.orders %}
    {% for line_item in order.line_items %}      
      {% if line_item.product_id == product.id %}
        {% assign product_bought = true %}
        {% break %}
      {% endif %}	
    {% endfor %}
  {% endfor %}
  {%- assign current_variant = product.selected_or_first_available_variant -%}
  {%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}
  <div class="mx-auto max-width-4 position-relative">
    {% if product_bought == true %}
    <div style="padding:56.25% 0 0 0;position:relative;"><iframe src="https://player.vimeo.com/video/51915437?title=0&byline=0&portrait=0" style="position:absolute;top:0;left:0;width:100%;height:100%;" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe></div><script src="https://player.vimeo.com/api/player.js"></script>
    {% else %}
    <a class="d-block" href="/cart/{{ current_variant.id }}:1">
      <img src="{{ featured_image.src | img_url: '1600x1600' }}" alt="{{ featured_image.alt | escape }}">
      <div class="position-absolute w-100 h-100 d-flex justify-content-center align-items-center" style="top: 0; left: 0;">
        <span class="btn btn-primary btn-circle btn-lg px-5">Watch Now</span>
      </div>
    </a>
    {% endif %}
  </div>
  <div class="py-4 text-center">
    <h1 class="h2 text-light">{{product.vendor | escape }}</h1>
    <p class="pb-0">{{product.title | escape}}</p>
    <div class="rte mx-auto max-width-4">
      {{ product.description }}
    </div>
  

  {% if section.settings.show_share_buttons %}
    {% include 'social-sharing', share_title: product.title, share_permalink: product.url, share_image: product %}
  {% endif %}

  {% unless product == empty %}
    <script type="application/json" data-product-json>
      {{ product | json }}
    </script>
  {% endunless %}
</div>

{% schema %}
  {
    "name": "Product pages",
    "settings": [
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      }
    ]
  }
{% endschema %}
